public String aOrAn(String word) {
    //code here
   string firstLetter = Character.toLowerCase(word.charAt(0));

    // Check if the first letter is a vowel
    if (firstLetter == 'a' || firstLetter == 'e' || firstLetter == 'i' || firstLetter == 'o' || firstLetter == 'u') {
        return "an " + word;
    } else {
        return "a " + word;
    }
}